@model  CatalogViewModel
@{
    ViewData["Title"] = "Каталог товаров";
}

<partial name="Partial/_Advertisement"/>

<section>
    <div class="container">

        <vc:bread-crumbs/>

        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar"/>
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_FeaturesItems" model="Model.Products" />
                </div>

                <paging page-view-model="Model.PageViewModel"
                        page-action="Index"
                        page-url-SectionId="@Model.SectionId"
                        page-url-BrandId="@Model.BrandId"
                        page-url-PageSize="@Context.Request.Query["PageSize"]">
                </paging>
            </div>
        </div>
    </div>
</section>

